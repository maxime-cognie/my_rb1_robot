<?xml version="1.0" ?>
<robot name="rb1_robot">

    <!-- Link - base (chassis) -->
    <link name="base_link">
        <inertial>
            <mass value="22" />
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.508749998" ixy="0" ixz="0" iyy="0.508749998" iyz="0" izz="0.6875"/>
        </inertial>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.30" radius="0.25"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.30" radius="0.25"/>
            </geometry>
            <material name="Blue">
                <color rgba="0 0 1.0 1"/>
            </material>
        </visual>
    </link>

    <!-- Joint - base footprint / base link -->
    <joint name="joint_base_footprint_base_link" type="fixed">
        <origin xyz="0 0 -0.15" rpy="0 0 0"/>
        <child link="base_link"/>
        <parent link="base_footprint"/>
    </joint> 

    <!-- Link - base footprint -->
    <link name="base_footprint"/>  

    <!-- Joint - base_link / right wheel -->
    <joint name="joint_base_link_right_wheel" type="continuous">
        <origin xyz="0 -0.2 -0.15" rpy="0 0 0"/>
        <child link="right_wheel"/>
        <parent link="base_link"/>
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <!-- Link - right wheel -->
    <link name="right_wheel">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <inertia ixx="0.000189583" ixy="0" ixz="0" iyy="0.000189583" iyz="0" izz="0.0002"/>
        </inertial>
        <collision>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <geometry>
                <cylinder length="0.02" radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <geometry>
                <cylinder length="0.02" radius="0.025"/>
            </geometry>
            <material name="Red">
                <color rgba="1.0 0 0 1"/>
            </material>
        </visual> 
    </link>

    <!-- Joint - base link / left wheel -->
    <joint name="joint_base_link_left_wheel" type="continuous">
        <origin xyz="0 0.2 -0.15" rpy="0 0 0"/>
        <child link="left_wheel"/>
        <parent link="base_link"/>
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <!-- Link - left wheel -->
    <link name="left_wheel">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <inertia ixx="0.000189583" ixy="0" ixz="0" iyy="0.000189583" iyz="0" izz="0.0002"/>
        </inertial>
        <collision>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <geometry>
                <cylinder length="0.02" radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <geometry>
                <cylinder length="0.02" radius="0.025"/>
            </geometry>
            <material name="Red">
                <color rgba="1.0 0 0 1"/>
            </material>
        </visual>
    </link>


    <!-- Joint - base link / front caster -->
    <joint name="joint_base_link_front_caster" type="fixed">
        <origin xyz="0.1 0 -0.15" rpy="0 0 0"/>
        <child link="front_caster"/>
        <parent link="base_link"/>
        <joint_properties damping="0" friction="0"/>
    </joint>

    <!-- Link - front caster -->
    <link name="front_caster">
        <inertial>
            <mass value="0.5" />
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.000125" ixy="0" ixz="0" iyy="0.000125" iyz="0" izz="0.000125"/>
        </inertial>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.0225"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.0225"/>
            </geometry>
            <material name="Blue">
                <color rgba="0 0 1.0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 -0.0175" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 -0.0175" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
            <material name="Grey">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>
    </link>

    <!-- Joint - base link / back caster -->
    <joint name="joint_base_link_back_caster" type="fixed">
        <origin xyz="-0.1 0 -0.15" rpy="0 0 0"/>
        <child link="back_caster"/>
        <parent link="base_link"/>
        <joint_properties damping="0" friction="0"/>
    </joint>

    <!-- Link - back caster -->
    <link name="back_caster">
        <inertial>
            <mass value="0.5" />
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.000125" ixy="0" ixz="0" iyy="0.000125" iyz="0" izz="0.000125"/>
        </inertial>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.0225"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.0225"/>
            </geometry>
            <material name="Blue">
                <color rgba="0 0 1.0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 -0.0175" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 -0.0175" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
            <material name="Grey">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>
    </link>

    <!-- Joint - base link / front laser-->
    <joint name="joint_base_link_front_laser" type="fixed">
        <origin xyz="0.25 0 0.075" rpy="3.1415 0 0"/>
        <child link="front_laser"/>
        <parent link="base_link"/>
    </joint>

    <!-- Link - front laser -->
    <link name="front_laser"/> 

    <!-- colors for the gazebo model -->
    <gazebo reference="base_link">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>
    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>
    <gazebo reference="front_caster">
        <material>Gazebo/Grey</material>
        <mu1>0.1</mu1>
        <mu2>0.1</mu2>
    </gazebo>
    <gazebo reference="back_caster">
        <material>Gazebo/Grey</material>
        <mu1>0.1</mu1>
        <mu2>0.1</mu2>
    </gazebo>

    <!-- force the base link and the caster wheel links to be separated -->
    <gazebo reference="joint_base_link_front_caster">
        <preserveFixedJoint>true</preserveFixedJoint>
    </gazebo>
    <gazebo reference="joint_base_link_back_caster">
        <preserveFixedJoint>true</preserveFixedJoint>
    </gazebo>


    <gazebo>
        <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
            <alwaysOn>true</alwaysOn>
            <updateRate>20</updateRate>
            <leftJoint>joint_base_link_right_wheel</leftJoint>
            <rightJoint>joint_base_link_left_wheel</rightJoint>
            <wheelSeparation>0.4</wheelSeparation>
            <wheelDiameter>0.05</wheelDiameter>
            <torque>10</torque>
            <commandTopic>cmd_vel</commandTopic>
            <odometryTopic>odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <robotBaseFrame>base_footprint</robotBaseFrame>
        </plugin>
    </gazebo>

    <gazebo reference="front_laser">
        <sensor type="ray" name="head_hokuyo_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>20</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.570796</min_angle>
                        <max_angle>1.570796</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.02</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
                <topicName>/laser/scan</topicName>
                <frameName>front_laser</frameName>
            </plugin>
        </sensor>
    </gazebo>

</robot>